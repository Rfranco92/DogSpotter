      <label class = "statement"><b>Last Name</b></label>
      <input type="text" placeholder="Last Name" name="ln" required>

      <label class = "statement"><b>E-mail</b></label>
      <input type="text" placeholder="E-mail" name="email" required>

      <label class = "statement"><b>Address</b></label>
      <input type="text" placeholder="Address (Not required)" name="address">
      <br>
      <button type="submit" class="btn btn-lg btn-primary" id="submit" data-toggle="modal">Register</button>
            <br>
            <label class ="statement">Already have an account? <a href = "/signin">Click here to log in!</a></label>
